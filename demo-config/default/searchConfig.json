      "facets": [
        {
          "name": "background",
          "filter_word": "Background"
        },
        {
          "name": "foreground",
          "filter_word": "Map"
        },
        {
          "name": "ne_10m_admin_0_countries",
          "filter_word": "Country"
        }
      ]
    }
